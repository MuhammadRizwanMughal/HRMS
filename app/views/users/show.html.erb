<div class="container-fluid">
	<%= link_to "SignOut", destroy_user_session_path, method: :delete %><br>
	<h1><%= @user.fname.capitalize %> your details:</h1>
	<table class="table-bordered table-striped table-hover table-condensed table-responsive">
		<tr>
			<th>Firstname</th>
			<td><%= @user.fname.capitalize %></td>
		</tr>
		<tr>
			<th>Lastname</th>
			<td><%= @user.lname.capitalize %></td>
		</tr>
		<tr>
			<th>Username</th>
			<td><%= @user.uname %></td>
		</tr>
		<tr>
			<th>Email</th>
			<td><%= @user.email %></td>
		</tr>
		<tr>
			<th>Mobile</th>
			<td><%= @user.mobile %></td>
		</tr>
		<tr>
			<th>Address</th>
			<td><%= @user.address %></td>
		</tr>
		<tr>	
			<th>DOB</th>
			<td><%= @user.dob %></td>
		</tr>
		<tr>
			<th>Gender</th>
			<td><%= @user.gender %></td>
		</tr>
	</table>


	<h1>Leave Section:</h1>
	<% @sum = 0 %>

	<% if @user.leaves.present? %>
		<h4>Previous Leaves:</h4>
		<table class="table-bordered table-striped table-hover table-condensed table-responsive">
			<tr>
				<th>Day Count</th>
				<th>Start Date</th>
				<th>End Date</th>
				<th>Leave Type</th>
				<th>Description</th>
				<th>Status</th>
			</tr>
			<% @leave.each do |l| %>
				<tr>
					<td><%= (l.edate - l.sdate).to_i %></td>
					<td><%= l.sdate %></td>
					<td><%= l.edate %></td>
					<td><%= l.leave_type %></td>
					<td><%= l.description %></td>
					<td><%= l.status %></td>
				</tr>
			<% end %>
		</table>
	<% else %>
		<%= @user.fname.capitalize %> has taken no leaves
	<% end %>
	<h4>Leave Balance:</h4>
	<table class="table-bordered table-striped table-hover table-condensed table-responsive">
		<tr>
			<th>Total Leave Days</th>
			<th>Leaves taken</th>
			<th>Leave days left</th>
		</tr>
		<tr>
			<td><%= @user.total_leave %></td>
			<td><%= @user.leaves_taken %></td>
			<td><%= @user.leave_left %></td>
		</tr>
	</table>
	<h5><%= link_to 'Apply', new_user_leave_path(@user.id)%> for Leave</h5>
</div>