<div class="container">
	<h1>Showing leave history of <%= @user.fname %> <%= @user.lname %></h1>
	<% if @user.leaves.present? %>
		<table class="table-striped table-hover table-condensed table-responsive">
			<tr>
				<th>Day Count</th>
				<th>Start Date</th>
				<th>End Date</th>
				<th>Status</th>
				<th>Description</th>
			</tr>
			<tr>
				<td><%= (@leave.edate + 1 - @leave.sdate).to_i %></td>
				<td><%= @leave.sdate %></td>
				<td><%= @leave.edate %></td>
				<td><%= @leave.status %></td>
				<td><%= @leave.description %></td>
			</tr>
		</table>
	<% else %>
		<%= @user.fname.capitalize %> has taken no leaves
	<% end %>
	<br>
	<p><%= link_to 'Back', admin_user_path(@user) %> to <%= @user.fname %>'s Info Page</p>
</div>